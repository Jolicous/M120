<Window x:Class="M120Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M120Projekt"
        mc:Ignorable="d"
        Title="Produkt" Height="469.5" Width="424.5" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Viewbox Stretch="Fill">
            <Menu HorizontalAlignment="Left" Height="9" VerticalAlignment="Top">
                <MenuItem Header="Produkte" Click="MenuItem_Click" FontSize="5"/>
                <MenuItem Header="Bestellungen" Click="MenuItem_Click_1" FontSize="5"/>
                <MenuItem Header="Kontakt" Click="MenuItem_Click_2" FontSize="5"/>
            </Menu>
        </Viewbox>
        <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="Platzhalter" Width="auto" Height="auto">
            <local:Bestellung HorizontalAlignment="Left"/>
        </ScrollViewer>
    </StackPanel>
</Window>
