<Window x:Class="M120Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M120Projekt"
        mc:Ignorable="d"
        Title="Produkt" Height="336.5" Width="474.5" WindowStartupLocation="Manual">
    <StackPanel>
        <Viewbox Stretch="Fill">
            <Menu HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" BorderThickness="1,1,1,1">
                <MenuItem Header="Produkte" Click="MenuItem_Click" FontSize="9"/>
                <MenuItem Header="Bestellungen" Click="MenuItem_Click_1" FontSize="9"/>
                <MenuItem Header="Kontakt" Click="MenuItem_Click_2" FontSize="9"/>
            </Menu>
        </Viewbox>
        <ScrollViewer x:Name="Platzhalter" Width="auto" Height="auto">
            <local:DetailProdukt HorizontalAlignment="Left" Width="auto"/>
        </ScrollViewer>
    </StackPanel>
</Window>
