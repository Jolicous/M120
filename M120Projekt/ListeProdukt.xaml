<UserControl x:Class="M120Projekt.ListeProdukt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120Projekt"
             mc:Ignorable="d" 
             d:DesignHeight="293.526" d:DesignWidth="406.115">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"  Content="Produkte" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
        <Button Grid.Row="1" Height="auto" Width="auto" Background="Green" Click="Button_Click">Neues Produkt</Button>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="2" x:Name="Platzhalter" Width="auto" Height="auto"></ScrollViewer>
    </Grid>
</UserControl>
